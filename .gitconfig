[core]
    editor = vim
    excludesfile = ~/.gitignore

[commit]
    verbose = true
[pull]
    rebase = true
[branch]
    autosetuprebase = always
[push]
    default = simple
[rebase]
    autoSquash = true
    autoStash = true

[user]
    email = timothee.denizou@epita.fr
    name = Timothee Denizou
[alias]
    c = commit -m
    p = push
    fetch = fetch --all
    pushd = push -u origin HEAD
    l = log --all --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    act = !sh -c 'git add $1 && git commit -m $2 && git tag $2' -

[color]
    ui = true
    branch = auto
    diff = auto
    interactive = auto
    status = auto

[sendemail]
    smtpencryption = tls
    smtpserver = smtp.office365.com
    smtpserverport = 587
    smtpuser = timothee.denizou@epita.fr
